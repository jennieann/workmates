<%= image_tag @person.image.url(:large) %>
<p><%=@person.name%> <%=@person.lastname %></p>
<p><%= @person.title %></p>



<%= link_to "Edit Person", edit_person_path(@person) %>
<%= link_to "Delete Person",
            person_path(@person),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this person?" }
%>
