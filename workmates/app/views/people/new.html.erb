<h1>New Person</h1>
<%= form_for(@person) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>
<p>
  <%= f.label :lastname %><br>
  <%= f.text_field :lastname %>
</p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>
<p>
  <%= f.label "Load image" %>
  <%= f.file_field :image %>
</p>

  <%= f.submit %>
<% end %>
