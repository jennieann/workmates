<%= form_for(@person, html: {multipart: true}) do |f| %>
  <% if @person.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@person.errors.count, "error") %>
     prohibited this project from being saved:</h2>
     <ul>
       <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
  </ul> </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>
<p>
  <%= f.label :lastname %><br>
  <%= f.text_field :lastname %>
</p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>
<p>
  <%= f.label :image %>
  <%= f.file_field :image %>
</p>

  <%= f.submit %>
<% end %>
